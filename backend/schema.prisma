generator client {
  provider = "prisma-client"
  output   = "./generated/prisma"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Item {
  id    Int    @id @default(autoincrement())
  name  String @unique
  emote String
}

model Recipe {
  id          Int    @id @default(autoincrement())
  ingredientA String
  ingredientB String
  result      String

  @@unique([ingredientA, ingredientB, result], name: "ingredientA_ingredientB_result")
}
